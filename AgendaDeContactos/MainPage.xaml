<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaDeContactos.MainPage">

    <StackLayout Padding="20" Spacing="15">
        <Label Text="Agenda Personal"
               FontSize="28"
               FontAttributes="Bold"
               TextColor="#0D47A1"
               HorizontalOptions="Center"
               Margin="0,0,0,20"/>

        <Button Text="Lista de Contactos"
                Clicked="IrListaContactos"
                BackgroundColor="#2196F3"
                TextColor="White"
                CornerRadius="8"
                HeightRequest="50"
                FontSize="16"/>

        <Button Text="Crear Nuevo Contacto"
                Clicked="IrCrearContacto"
                BackgroundColor="#1E88E5"
                TextColor="White"
                CornerRadius="8"
                HeightRequest="50"
                FontSize="16"/>
        
        <Button Text="Configuración"
                Clicked="IrConfiguracion"
                BackgroundColor="#1976D2"
                TextColor="White"
                CornerRadius="8"
                HeightRequest="50"
                FontSize="16"/>
    </StackLayout>

</ContentPage>
