<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaDeContactos.MainPage"
             BackgroundColor="#c3c68e">
    <StackLayout Padding="20" Spacing="15">
        <Label Text="Agenda Personal"
               FontSize="28"
               FontAttributes="Bold"
               TextColor="#4E342E"
               HorizontalOptions="Center"
               Margin="0,0,0,20"/>
        <Button Text="Lista de Contactos"
                Clicked="IrListaContactos"
                BackgroundColor="#a08265"
                TextColor="White"
                CornerRadius="8"
                HeightRequest="50"
                FontSize="16"/>
        <Button Text="Crear Nuevo Contacto"
                Clicked="IrCrearContacto"
                BackgroundColor="#a08265"
                TextColor="White"
                CornerRadius="8"
                HeightRequest="50"
                FontSize="16"/>
        <Button Text="Configuración"
                Clicked="IrConfiguracion"
                BackgroundColor="#a08265"
                TextColor="White"
                CornerRadius="8"
                HeightRequest="50"
                FontSize="16"/>
    </StackLayout>
</ContentPage>