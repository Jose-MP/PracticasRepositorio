<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaDeContactos.Views.LoginPage"
             Shell.NavBarIsVisible="False"
             Title="LoginPage">

    <Grid RowDefinitions="2*,*" Margin="0,10,0,0">
        <VerticalStackLayout Padding="5" VerticalOptions="Center" HorizontalOptions="Center">
            <Frame BorderColor="Gray"
                   CornerRadius="10"
                   HasShadow="True"
                   Margin="0,-20,0,0"
                   ZIndex="0"
                   Padding="8">
                <Frame.Shadow>
                    <Shadow Brush="Black" Offset="20,20" Radius="10" Opacity="0.9" />
                </Frame.Shadow>

                <StackLayout Padding="10">
                    <VerticalStackLayout Padding="10" BackgroundColor="White">
                        <Image Source="brushfill.png"
                               HeightRequest="80"
                               IsVisible="False"
                               HorizontalOptions="Center" />
                        <Label Text="Login"
                               FontSize="30"
                               FontAttributes="Bold"
                               TextColor="Black"
                               FontFamily="Consolas"
                               Padding="5"/>
                        <Label Text="Para acceder!"
                               TextColor="Black"
                               FontSize="14"
                               Padding="5"
                               FontAttributes="Bold" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Padding="30">
                        <Label FontFamily="Consolas" Text="Usuario"/>
                        <Frame CornerRadius="10" Padding="3" Margin="0,10,0,0">
                            <Entry x:Name="Username"
                                   Placeholder="Username"
                                   FontSize="18"
                                   Margin="5,0,0,0" />
                        </Frame>

                        <Label FontFamily="Consolas" Text="Password" Margin="0,10,0,0"/>
                        <Frame CornerRadius="10" Padding="3" Margin="0,10,0,0">
                            <Entry x:Name="Password"
                                   Placeholder="Password"
                                   FontSize="18"
                                   IsPassword="True"
                                   Margin="5,0,0,0" />
                        </Frame>

                        <Button x:Name="LoginButton"
                                Text="Acceso"
                                Clicked="LoginButton_Clicked"
                                Margin="0,20,0,0"
                                VerticalOptions="CenterAndExpand"
                                HorizontalOptions="FillAndExpand"/>

                        <BoxView Color="Black"
                                 Margin="0,20,0,0"
                                 HeightRequest="2"
                                 HorizontalOptions="Fill" />

                        <!-- Enlaces -->
                        <VerticalStackLayout Padding="10" Margin="0,10,0,0">
                            <Label HorizontalOptions="Center"
                                   FontAttributes="Bold"
                                   FontFamily="Consolas">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="No tienes una cuenta? " />
                                        <Span Text="Registrate"
                                              TextColor="Blue"
                                              TextDecorations="Underline">
                                            <Span.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="TapGestureRecognizerReg_Tapped"/>
                                            </Span.GestureRecognizers>
                                        </Span>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>

                            <Label HorizontalOptions="Center"
                                   FontAttributes="Bold"
                                   FontFamily="Consolas">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="¿Olvidaste tu contraseña? " />
                                        <Span Text="Recuperar"
                                              TextColor="Blue"
                                              TextDecorations="Underline">
                                            <Span.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="TapGestureRecognizerPwd_Tapped"/>
                                            </Span.GestureRecognizers>
                                        </Span>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </StackLayout>
            </Frame>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
