<?xml version="1.0" encoding="utf-8" ?>
    <ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaDeContactos.Views.RegistroPage"
             Title="Registro"
             BackgroundColor="#c3c68e">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <Label Text="Registro" FontSize="28" FontAttributes="Bold" HorizontalOptions="Center"/>

            <Entry x:Name="NombreEntry" Placeholder="Nombre completo" PlaceholderColor="DimGray" />
            <Entry x:Name="CorreoEntry" Placeholder="Correo electrónico" Keyboard="Email" PlaceholderColor="DimGray"/>
            <Entry x:Name="PasswordEntry" Placeholder="Contraseña" IsPassword="True" PlaceholderColor="DimGray"/>
            <Entry x:Name="ConfirmPasswordEntry" Placeholder="Confirmar contraseña" IsPassword="True" PlaceholderColor="DimGray"/>

            <Button Text="Registrar" 
                    Clicked="OnRegistroClicked"
                    BackgroundColor="#a08265"
                    TextColor="White"
                    CornerRadius="8"
                    HeightRequest="50"/>
        </StackLayout>
    </ScrollView>
</ContentPage>