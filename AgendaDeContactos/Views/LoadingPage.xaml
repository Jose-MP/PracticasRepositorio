<?xml version="1.0" encoding="utf-8" ?>
    <ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaDeContactos.Views.LoadingPage"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             Shell.NavBarIsVisible="False"
             Title="LoadingPage"
             BackgroundColor="#c3c68e">

    <ContentPage.Behaviors>
        <mct:StatusBarBehavior StatusBarColor="#a08265"/>
    </ContentPage.Behaviors>

    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <ActivityIndicator Color="#a08265"
                           IsRunning="True" HeightRequest="50" WidthRequest="50"
                           IsVisible="True" />
        <Label Text="Checking authentication..." HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
