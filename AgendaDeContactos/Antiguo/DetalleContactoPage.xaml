<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaDeContactos.DetalleContactoPage"
             Title="DetalleContactoPage"
             BackgroundColor="#c3c68e">
    <Frame BackgroundColor="#EDE7D9" CornerRadius="10" Padding="15" Margin="20">
        <Grid Padding="10" ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto">
            <Label Grid.Row="0" Grid.Column="0" Text="Nombre:" FontAttributes="Bold" TextColor="#4E342E"/>
            <Label Grid.Row="0" Grid.Column="1" Text="{Binding Nombre}" TextColor="#4E342E"/>
            <Label Grid.Row="1" Grid.Column="0" Text="Teléfono:" FontAttributes="Bold" TextColor="#4E342E"/>
            <Label Grid.Row="1" Grid.Column="1" Text="{Binding Telefono}" TextColor="#4E342E"/>
            <Label Grid.Row="2" Grid.Column="0" Text="Correo:" FontAttributes="Bold" TextColor="#4E342E"/>
            <Label Grid.Row="2" Grid.Column="1" Text="{Binding Correo}" TextColor="#4E342E"/>
            <Label Grid.Row="3" Grid.Column="0" Text="Dirección:" FontAttributes="Bold" TextColor="#4E342E"/>
            <Label Grid.Row="3" Grid.Column="1" Text="{Binding Direccion}" TextColor="#4E342E"/>
        </Grid>
    </Frame>
</ContentPage>