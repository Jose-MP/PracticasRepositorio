<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaDeContactos.ConfiguracionPage"
             Title="ConfiguracionPage"
             BackgroundColor="#c3c68e">
    <AbsoluteLayout>
        <Label Text="ConfiguraciÃ³n"
               FontSize="28"
               FontAttributes="Bold"
               TextColor="#4E342E"
               AbsoluteLayout.LayoutBounds="0.5,0.1,-1,-1"
               AbsoluteLayout.LayoutFlags="PositionProportional"/>

        <Frame BackgroundColor="#EDE7D9"
               CornerRadius="10"
               Padding="15"
               AbsoluteLayout.LayoutBounds="0.5,0.3,0.8,-1"
               AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional">
            <HorizontalStackLayout Spacing="15">
                <Label Text="Activar Notificaciones"
                       VerticalOptions="Center"
                       TextColor="#4E342E"
                       FontSize="18"/>
                <Switch HorizontalOptions="End"
                        OnColor="#a08265"/>
            </HorizontalStackLayout>
        </Frame>

        <Button Margin="0,20,0,0"
                Text="Logout"
                x:Name="LogoutButton"
                BackgroundColor="#a08265"
                TextColor="White"
                CornerRadius="12"
                HeightRequest="50"
                FontSize="18"
                AbsoluteLayout.LayoutBounds="0.5,0.5,0.6,-1"
                AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional"
                Clicked="LogoutButton_Clicked"/>
    </AbsoluteLayout>
</ContentPage>