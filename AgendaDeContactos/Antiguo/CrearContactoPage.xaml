<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaDeContactos.CrearContactoPage"
             Title="CrearContactoPage"
             BackgroundColor="#c3c68e">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Entry x:Name="nombreEntry" Placeholder="Nombre" BackgroundColor="#EDE7D9" TextColor="#4E342E" PlaceholderColor="DimGray"/>
            <Entry x:Name="telefonoEntry" Placeholder="Teléfono" Keyboard="Telephone" BackgroundColor="#EDE7D9" TextColor="#4E342E" PlaceholderColor="DimGray"/>
            <Entry x:Name="correoEntry" Placeholder="Correo Electrónico" Keyboard="Email" BackgroundColor="#EDE7D9" TextColor="#4E342E" PlaceholderColor="DimGray"/>
            <Button Text="Guardar" Clicked="OnGuardarClicked" BackgroundColor="#a08265" TextColor="White" CornerRadius="8" HeightRequest="50" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>